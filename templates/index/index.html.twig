{% extends 'base.html.twig' %}

{% block title %}Проверка ИНН физического лица{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Проверка ИНН физического лица</h1>

    <form action="/" method="POST" name="inn_validation">
        <input id="inn" name="inn" type="text" placeholder="ИНН физического лица" />
        <div id="inn_validation_result">
            {{ message }}
            {% if code != 200 %} (код ошибки {{ code }}){% endif %}
        </div>
        <button type="submit">Отправить</button>
    </form>
</div>
{% endblock %}